# ===== CONFIGURATION SYSTÈME IOT NODALIS =====
# Copiez vers .env et modifiez les valeurs

# Database PostgreSQL
POSTGRES_DB=nodalis_iot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD_2024
POSTGRES_PORT=5432

# Redis Cache
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD_2024
REDIS_PORT=6380

# JWT Security - GÉNÉRER UNE CLÉ FORTE: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_JWT_SECRET_64_CHARS_MIN

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=3000
LOG_LEVEL=info

# MQTT Broker
MQTTSERVER=mqtt://mosquitto:1883
MQTTPORT=1883
MQTT_USERNAME=iot_client
MQTT_PASSWORD=CHANGE_ME_SECURE_MQTT_PASSWORD_2024

# Frontend
FRONTEND_PORT=80

# External URLs
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost
MQTT_WS_URL=ws://localhost:9001

# Composed URLs (auto-generated)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ===== INSTRUCTIONS SÉCURITÉ =====
# 1. Remplacez TOUS les CHANGE_ME_*
# 2. Utilisez des mots de passe de 32+ caractères
# 3. JWT_SECRET doit faire 64+ caractères
# 4. En production, utilisez des secrets externes (Docker secrets, Vault, etc.)